<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
    <tbody>
      <% @friends.each do |friend| %>
      <tr>
        <td><strong>Name: </strong> <%= friend.full_name %></td>
        <td><strong>Email: </strong> <%= friend.email %></td>
        <% if current_user.not_friends_with?(friend.id) %>
          <td><strong>Actions: </strong> <%= link_to "View Profile", '#', class: "btn btn-sm btn-success" %>
          <%= link_to 'Stalk?', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %></td>
        <% else %>
          <td>
            <span class="badge badge-secondar">
              Friend Acquired
            </span>
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </div>
<% end %>